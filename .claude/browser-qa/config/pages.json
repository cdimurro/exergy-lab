{
  "version": "1.0.0",
  "baseUrl": "http://localhost:3000",
  "pages": [
    {
      "id": "dashboard",
      "name": "Dashboard",
      "route": "/",
      "priority": 1,
      "checks": {
        "requiredElements": [
          {"selector": "h1", "contains": "Exergy Lab"},
          {"selector": "[data-testid='stats-row']", "exists": true},
          {"selector": "[data-testid='quick-actions']", "exists": true},
          {"selector": "[data-testid='sidebar']", "exists": true}
        ],
        "consoleErrors": {
          "allowedPatterns": ["favicon.ico"],
          "maxWarnings": 5
        },
        "screenshot": {
          "fullPage": false,
          "waitForSelector": "[data-testid='stats-row']"
        }
      }
    },
    {
      "id": "discovery",
      "name": "Discovery Engine",
      "route": "/discovery",
