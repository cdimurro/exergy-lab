# Exergy Lab - Environment Variables Template
# Copy this file to .env and fill in your actual values

# ============================================================
# REQUIRED - Core API Keys
# ============================================================

# Anthropic API Key (for Claude Haiku classifier and agents)
# Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-api03-...

# ============================================================
# REQUIRED - Database Configuration
# ============================================================

# PostgreSQL Database URL
# Format: postgresql://user:password@host:port/database
# Local development: postgresql://postgres:postgres@localhost:5432/exergy_lab
# Docker: postgresql://postgres:postgres@postgres:5432/exergy_lab
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/exergy_lab

# ============================================================
# OPTIONAL - External API Keys (Free alternatives available)
# ============================================================

# Materials Project API Key (optional - pymatgen has public access)
# Get from: https://materialsproject.org/api
MATERIALS_PROJECT_API_KEY=

# NREL API Key (optional - many endpoints are public)
# Get from: https://developer.nrel.gov/signup/
NREL_API_KEY=

# ============================================================
# Application Configuration
# ============================================================

# Environment (development, production, testing)
ENVIRONMENT=development

# Backend API Configuration
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
BACKEND_RELOAD=true

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_APP_NAME=Exergy Lab

# ============================================================
# Database Configuration (for Docker/Production)
# ============================================================

# PostgreSQL Admin Credentials
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=exergy_lab
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# ============================================================
# Caching Configuration
# ============================================================

# Cache TTL (seconds)
ARXIV_CACHE_TTL=604800        # 7 days
PUBCHEM_CACHE_TTL=2592000     # 30 days
MATERIALS_CACHE_TTL=2592000   # 30 days

# ============================================================
# Agent Configuration
# ============================================================

# Classifier Model (Claude Haiku for speed/cost)
CLASSIFIER_MODEL=claude-3-haiku-20240307
CLASSIFIER_TEMPERATURE=0.0

# Primary Agent Model (Claude Sonnet for quality)
AGENT_MODEL=claude-3-5-sonnet-20241022
AGENT_TEMPERATURE=0.3

# Literature Search Defaults
MAX_ARXIV_RESULTS=10
MAX_PUBMED_RESULTS=10

# ============================================================
# Logging Configuration
# ============================================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log format (json, text)
LOG_FORMAT=json

# ============================================================
# Security Configuration
# ============================================================

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# API Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

# ============================================================
# Optional - Advanced Features
# ============================================================

# Redis URL (optional - for distributed caching)
# REDIS_URL=redis://localhost:6379/0

# Sentry DSN (optional - for error tracking)
# SENTRY_DSN=

# Analytics (optional)
# ANALYTICS_ENABLED=false
# ANALYTICS_KEY=
