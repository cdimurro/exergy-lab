# Anthropic API Key (REQUIRED)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/exergy_lab

# App Configuration
APP_NAME=Exergy Lab
APP_VERSION=1.0.0-mvp
ENVIRONMENT=development
DEBUG=true

# Model Configuration
CLASSIFIER_MODEL=claude-3-haiku-20240307
AGENT_MODEL=claude-3-5-sonnet-20241022
AGENT_TEMPERATURE=0.0

# Backend Server
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
BACKEND_RELOAD=true

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# API Cache TTL (seconds)
ARXIV_CACHE_TTL=604800
PUBCHEM_CACHE_TTL=2592000
MATERIALS_CACHE_TTL=2592000

# API Limits
MAX_ARXIV_RESULTS=50
RATE_LIMIT_ENABLED=true
